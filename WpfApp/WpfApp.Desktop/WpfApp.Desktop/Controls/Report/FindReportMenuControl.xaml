<UserControl x:Class="WpfApp.Desktop.Controls.Report.FindReportControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp.Desktop.Controls.Report"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{Binding FindReportMenuViewModel,Source={StaticResource Locator}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel>
            <local:FindReportInputControl DataContext="{Binding ClientId}" />
            <local:FindReportInputControl DataContext="{Binding FirstName}" />
            <local:FindReportInputControl DataContext="{Binding LastName}" />
        </StackPanel>
    </Grid>
</UserControl>
